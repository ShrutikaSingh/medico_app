<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prescription.ListMyPrescriptions">

    <ProgressBar
        android:id="@+id/loadDbProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="2dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/list_pres_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="Patients"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/list_patients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_pres_heading"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_patients"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Sorry you have no patients."
        android:textSize="18sp"
        android:visibility="invisible"/>
</RelativeLayout>